{
  "name": "@guardrail-dev/core",
  "version": "1.0.0",
  "description": "Advanced rate limiting and security protection library - an open-source alternative to Arcjet",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:typecheck": "vitest typecheck",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rate-limiting",
    "security",
    "bot-detection",
    "ip-geolocation",
    "vpn-detection",
    "email-validation",
    "throttling",
    "protection"
  ],
  "author": "Ali Adel Elroby <aliadelelroby@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aliadelelroby/guardrail.git"
  },
  "bugs": {
    "url": "https://github.com/aliadelelroby/guardrail/issues"
  },
  "homepage": "https://guardrail.dev",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./express": {
      "import": "./dist/adapters/express.js",
      "types": "./dist/adapters/express.d.ts"
    },
    "./next": {
      "import": "./dist/adapters/next.js",
      "types": "./dist/adapters/next.d.ts"
    },
    "./nestjs": {
      "import": "./dist/adapters/nestjs/index.js",
      "types": "./dist/adapters/nestjs/index.d.ts"
    },
    "./fastify": {
      "import": "./dist/adapters/fastify.js",
      "types": "./dist/adapters/fastify.d.ts"
    },
    "./koa": {
      "import": "./dist/adapters/koa.js",
      "types": "./dist/adapters/koa.d.ts"
    }
  },
  "dependencies": {
    "ioredis": "^5.4.2",
    "lru-cache": "^11.1.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "rxjs": "^7.8.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@nestjs/common": ">=10.0.0",
    "@nestjs/core": ">=10.0.0",
    "express": ">=4.0.0",
    "next": ">=13.0.0",
    "rxjs": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "@nestjs/common": {
      "optional": true
    },
    "@nestjs/core": {
      "optional": true
    },
    "rxjs": {
      "optional": true
    }
  }
}
